.spinner_islands
    position: relative
    display: inline-block

    color: transparent

    background-image: linear-gradient(0deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0))

    animation: spinner_islands 1s infinite linear
    backface-visibility: hidden  /* Для ускорения анимации */

    /* Для правильного позиционирования прелоадера относительно baseline */
    &:after
        visibility: hidden

        content: '\00A0' /* &nbsp */

    &:before
    
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0

        content: ''

        border: 2px solid currentColor /* Свойство color родителя устанавливается внутри @keyframes */
        border-right-color: transparent
        border-bottom-color: transparent
        border-radius: 1000px /* На android 2.3 border-radius в % не поддерживается */



    width: 38px;
    height: 38px;

    line-height: 38px;
    background-position: 0 -104px;
    left: 50%
    top: 20%


@keyframes spinner_islands 
    from {
        color: #fc0

        transform: rotate(0)
    }
    to
    {
        color: #fc0

        transform: rotate(360deg)
    }

